{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "tongweb-6.0",
    "annotations": {
      "description": "这是一个TongWeb 6.0的服务容器，支持部署您的Java Web项目",
      "tags": "tongweb,6.0,java web",
      "iconClass": "icon-openjdk"
    }
  },
  "labels": {
    "template": "tongweb-6.0"
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",	
      "metadata": {
        "name": "${NAME}",
        "annotations": {
          "description": "应用服务配置"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 8080,
            "targetPort": 8080
          },{
            "name": "manager",
            "port": 9060,
            "targetPort": 9060
          }
        ],
        "selector": {
          "name": "${NAME}"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      },
      "spec": {
        "host": "",
        "to": {
          "kind": "Service",
          "name": "${NAME}"
        },
        "port":{
          "targetPort":"web"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "annotations": {
          "description": "应用对应的image"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "annotations": {
          "description": "构建您的TongWeb应用"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "mytest",
              "name": "s2i-tongweb:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          },
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "${GENERIC_WEBHOOK_SECRET}"
            }
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "annotations": {
          "description": "您的应用部署配置设置"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "tongweb-app"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "mytest",
                "name": "${NAME}:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${NAME}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}",
            "labels": {
              "name": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "tongweb-app",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },{
                    "containerPort": 9060,
                    "protocol": "TCP"
                  },{
                    "containerPort": 22,
                    "protocol": "TCP"
                  },{
                    "containerPort": 8043,
                    "protocol": "TCP"
                  },{
                    "containerPort": 8443,
                    "protocol": "TCP"
                  }
                ]
              }
            ],
            "securityContext":{
                "runAsUser":0
            }
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "定义您的应用名称.",
      "required": true,
      "value": "tongweb-app"
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "displayName": "Git Repository URL",
      "description": "设置您项目的git地址",
      "required": true,
      "value": ""
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "displayName": "Git Reference",
      "description": "设置您的分支名称，默认使用当前主分支"
    },
    {
      "name": "CONTEXT_DIR",
      "displayName": "Context Directory",
      "description": "设置代码的相对路径，默认使用当前项目根目录."
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "displayName": "GitHub Webhook Secret",
      "description": "A secret string used to configure the GitHub webhook.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "GENERIC_WEBHOOK_SECRET",
      "displayName": "Generic Webhook Secret",
      "description": "A secret string used to configure the Generic webhook.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    }
  ]
}
